<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.droid080419.droid080419.elevenfifty_nine.AddTaskActivity">

     <ScrollView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/scrollView"
               android:layout_alignParentTop="true"
               android:layout_alignParentStart="true"
               android:layout_alignParentBottom="true"
               android:layout_alignParentEnd="true">

          <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >

               <EditText
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:id="@+id/eventName"
                         android:text="Event Name"/>

               <EditText
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:id="@+id/location"
                         android:text="Location"/>

               <LinearLayout
                         android:orientation="vertical"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">

                    <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceMedium"
                              android:text="From"
                              android:id="@+id/fromText"/>

                    <LinearLayout
                              android:orientation="horizontal"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content">

                         <EditText
                                   android:layout_width="246dp"
                                   android:layout_height="wrap_content"
                                   android:inputType="date"
                                   android:ems="10"
                                   android:id="@+id/startDate"
                                   android:text="@string/default_date_text"/>

                         <EditText
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:inputType="time"
                                   android:ems="10"
                                   android:id="@+id/startTime"
                                   android:text="@string/defualt_time_text"/>

                    </LinearLayout>
               </LinearLayout>

               <LinearLayout
                         android:orientation="vertical"
                         android:layout_width="fill_parent"
                         android:layout_height="fill_parent">

                    <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceMedium"
                              android:text="To"
                              android:id="@+id/toText"/>

                    <LinearLayout
                              android:orientation="horizontal"
                              android:layout_width="fill_parent"
                              android:layout_height="fill_parent">

                         <EditText
                                   android:layout_width="245dp"
                                   android:layout_height="wrap_content"
                                   android:inputType="date"
                                   android:ems="10"
                                   android:id="@+id/endDate"
                                   android:text="@string/default_date_text"/>

                         <EditText
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:inputType="time"
                                   android:ems="10"
                                   android:id="@+id/endTime"
                                   android:text="@string/defualt_time_text"/>


                    </LinearLayout>
               </LinearLayout>

               <CheckBox
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="All Day"
                         android:id="@+id/allDayBox"
                         android:checked="false"/>

               <EditText
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:inputType="time"
                         android:ems="10"
                         android:id="@+id/description"
                         android:text="Description"/>

               <LinearLayout
                         android:orientation="vertical"
                         android:layout_width="fill_parent"
                         android:layout_height="fill_parent">

                    <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceMedium"
                              android:text="Repitition"
                              android:id="@+id/repeteText"/>

                    <Spinner
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/repitition"
                              android:spinnerMode="dropdown"/>

               </LinearLayout>

               <LinearLayout
                         android:orientation="vertical"
                         android:layout_width="fill_parent"
                         android:layout_height="fill_parent">

                    <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceMedium"
                              android:text="Remind Me"
                              android:id="@+id/remindText"/>

                    <Spinner
                              android:layout_width="197dp"
                              android:layout_height="69dp"
                              android:id="@+id/remindIn"
                              android:spinnerMode="dropdown"/>
               </LinearLayout>

          </LinearLayout>

     </ScrollView>

</RelativeLayout>
